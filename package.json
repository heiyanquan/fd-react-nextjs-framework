{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "dev:sit": "cross-env NODE_ENV=development vite --host --mode sit",
    "build:sit": "vite build --mode sit",
    "build": "vite build --mode prod",
    "preview": "vite preview --host",
    "lint": "vite lint src",
    "format": "prettier --write \"src/**/*.js\" \"src/**/*.tsx\" \"*json\" \"*.config.js\" \"*.eslintrc.js\"",
    "clear": "rimraf **/*/node_modules && rimraf node_modules"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.0",
    "@hs-admin/base-components": "workspace:^",
    "@hs-admin/utils": "workspace:^",
    "ahooks": "^3.7.10",
    "antd": "^5.16.1",
    "axios": "^1.6.7",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.10",
    "immer": "^10.0.3",
    "lodash": "^4.17.21",
    "react": "^18",
    "react-dom": "^18",
    "react-quill": "^2.0.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.1",
    "use-immer": "^0.9.0",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.0",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "less": "^4.2.0",
    "postcss-pxtorem": "^6.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.4",
    "typescript-plugin-css-modules": "^5.1.0",
    "unocss": "^0.59.0",
    "vite": "^5.2.11",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-inspect": "^0.8.3"
  }
}
